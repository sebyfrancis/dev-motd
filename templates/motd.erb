  Hostname:   <%= scope.lookupvar('::fqdn') %>
  IP Address: <%= ipaddress %>

  Operating System: <%= scope.lookupvar('::operatingsystem') %> <%= scope.lookupvar('::operatingsystemrelease') %> <%= scope.lookupvar('::architecture') %>

<% if !processor0.nil? then -%>
  Processor: (<%= scope.lookupvar('::processorcount') %>x) <%= scope.lookupvar('::processor0') %>
<% end -%>
<% if !memorysize.nil? then -%>
  Memory: <%= scope.lookupvar('::memorysize') %>
<% end -%>

